<h1>Sign in</h1>

<%= form_tag sessions_path do %>
  <div class="field">   
    <%= label_tag :user_name %><br />
    <%= text_field_tag :user_name, params[:user_name] %>
  </div>
  <div class="field">   
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <p><%= submit_tag "Sign in" %></p>
  </div>
<% end %>
<p>New user? <%= link_to "Sign up!", signup_path %></p>
